{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": ".editorconfig,.gitignore,tsconfig.build.json,tsconfig.json,docker-compose.yml,.env,.example.env,next.config.mjs,next-env.d.ts,.eslintrc.js",
    "README.md": ".editorconfig,.gitignore"
  },
  "files.exclude": {
    "**/dist": true,
    "**/.vscode": false,
    "**/.idea": true,
    "**/.next": true
  },
  "eslint.validate": ["javascript", "css"],
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "eslint.workingDirectories": ["./server", "./client"],
  "material-icon-theme.folders.associations": {
    "_setup": "config",
    "strategies": "keys",
    "dto": "class",
    "migrations": "database",
    "decorators": "shader"
  },
  "material-icon-theme.files.associations": {
    "main.ts": "Merlin",
    "index.ts": "lib",
    "_index.ts": "lib",
    "**.interceptor.ts": "nest-middleware",
    "**.strategy.ts": "opa",
    "**.serializer.ts": "opa"
  }
}
